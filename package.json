{
  "name": "gas-price-oracle",
  "version": "0.1.5",
  "description": "Gas Price Oracle library for Ethereum dApps.",
  "main": "lib/index.js",
  "homepage": "https://github.com/peppersec/gas-price-oracle",
  "repository": {
    "type": "git",
