    "@types/mocha": "^7.0.2",
    "@types/mockery": "^1.4.29",
    "@types/node": "^14.0.5",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "mocha": "^7.2.0",
    "mockery": "^2.1.0",
    "prettier": "^2.1.2",
    "ts-node": "^8.10.1",
    "tslint": "^6.1.2",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.3.0",
    "typescript": "^3.9.3"
  },
